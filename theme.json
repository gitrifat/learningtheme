{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        
        "appearanceTools": true,

        "border": {
            "width": true,
            "color": true,
            "radius": true,
            "style": true
        },
        "typography": {
            "fontFamilies": [
                { 
                    "fontFamily": "'Rubik', sans-serif", "slug": "r-rubik", "name": "RoseTech-Rubik"
                }
            ],
            "fontSizes": [
                { "slug": "small", "size": "0.75rem", "name": "Small" },
                { "slug": "medium", "size": "1.25rem", "name": "Medium" },
                { "slug": "large", "size": "2.25rem", "name": "Large" },
                { "slug": "ex-large", "size": "3rem", "name": "Ex-Large" },
                { "slug": "gigantic", "size": "3.25rem", "name": "Gigantic" }
            ]
        },
        "color": {
            "defaultPalette": false,
            "palette": [
                
                    {"slug": "r-white", "color": "rgb(225,225,225)", "name": "RoseTech White"},
                    { "slug": "r-gray-100", "color": "rgb(243 244 246)", "name": "RoseTech Gray 100" },
                    { "slug": "r-gray-200", "color": "rgb(229 231 235)", "name": "RoseTech Gray 200" },
                    { "slug": "r-gray-300", "color": "rgb(209 213 219)", "name": "RoseTech Gray 300" },
                    { "slug": "r-gray-400", "color": "rgb(156 163 175)", "name": "RoseTech Gray 400" },
                    { "slug": "r-gray-500", "color": "rgb(107 114 128)", "name": "RoseTech Gray 500" },
                    { "slug": "r-gray-600", "color": "rgb(75 85 99)", "name": "RoseTech Gray 600" },
                    { "slug": "r-gray-700", "color": "rgb(55 65 81)", "name": "RoseTech Gray 700" },
                    { "slug": "r-gray-800", "color": "rgb(31 41 55)", "name": "RoseTech Gray 800" },
                    { "slug": "r-gray-900", "color": "rgb(17 24 39)", "name": "RoseTech Gray 900" },
                    { "slug": "r-primary", "color": "rgb(239 68 68)", "name": "RoseTech Primary" },
                    { "slug": "r-accent", "color": "rgb(67 56 202)", "name": "RoseTech Accent" },
                    { "slug": "r-success", "color": "rgb(52 211 153)", "name": "RoseTech Success" },
                    { "slug": "r-info", "color": "rgb(96 165 250)", "name": "RoseTech Info" },
                    { "slug": "r-warning", "color": "rgb(251 146 60)", "name": "RoseTech Warning" },
                    { "slug": "r-danger", "color": "rgb(236 72 153)", "name": "RoseTech Danger" }

            ],

            "background": true,
            "text": true,
            "link": true,
            "custom": true,
            "duotone": [
                { "slug": "r-pink-sunsate", "colors": ["#11245e", "#dc4379"], "name": "RoseTech Pink Sunsate" }
            ],

            "defaultGradients": false,
            "gradients": [
                {   "slug": "r-summer",
                    "name": "RoseTech Summer",
                    "gradient": "linear-gradient(#a8ff78, #78ffd6)"
                }
            ]
        },
        
        "blocks": {
            "core/site-title":{
                "color": {
                    "defaultPalette": true,
                    "palette": [
                        {"slug": "r-primary", "color": "#ef4444", "name": "RoseTech Primary"}
                    ],
                    "link": true,
                    "custom": false,
                    "gradients": [],
                    "customGradient": false
                },


                "typography": {
                    "fontFamilies": [
                        { 
                            "fontFamily": "Poppins, sans-serif", "slug": "r-poppin", "name": "RoseTech-Poppin"
                        }
                    ]
                }
                
                
            },
            "core/preformatted": {
                "typography": {
                    "fontSizes": [],
                    "customFontSize": false,
                    "lineHeight": true,
                    "dropCap": true,
                    "fontWeight": true,
                    "fontStyle": true,
                    "textTransform": true,
                    "letterSpacing": true,
                    "textDecoration": true
                    
                }
            },
            "core/cover": {
                "color": {
                    "duotone": [],
                    "customDuotone": false
                }
            }

        },
        "layout": {
            "wideSize": "1100px",
            "contentSize": "800px"
        },
        "spacing": {
            "padding": true,
            "margin": true,
            "units": [
                "px",
                "em",
                "rem",
                "vh",
                "vw",
                "%"
            ],
            "blockGap": true
        }
    },

    "styles": {
        "color": {
            "text" : "var(--wp--preset--color--r-gray-600)",
            "background": "var(--wp--preset--color--white)"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--r-primary)"
                }
            }
        },
        "blocks": {
            "core/button": {
                "color": {
                    "gradient": "var(--wp--preset--gradient--r-summer)"
                }
            },
            "core/pullquote": {
                "border": {
                    "width": "2px",
                    "radius": "10px",
                    "style": "solid",
                    "color": "var(--wp--preset--color--r-primary)"
                }
            },
            "core/site-title": {
            "typography": {
                "fontFamily": "var(wp--preset--font-family--r-rubik)",
                "fontSize": "16px",
                "fontWeight": "normal",
                "fontStyle": "normal",
                "textDecoration": "none",
                "textTransform": "none"
            }
            }
        },
        "typography": {
            "fontFamily": "var(wp--preset--font-family--r-poppin)",
            "fontSize": "16px",
            "fontWeight": "normal",
            "fontStyle": "normal",
            "textDecoration": "none",
            "textTransform": "none"
        },

        "spacing": {
            "margin": {
                "top": "0px",
                "bottom":  "0px",
                "left": "0px",
                "right": "0px"
            },
            "padding": {
                "top": "0px",
                "bottom":  "0px",
                "left": "0px",
                "right": "0px"
            },
            "blockGap": "4rem"
        }
    }

    

}